<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/tv_plannedPaymentList_Image"
                    android:text=""
                    android:textColor="#FF8000"
                    android:paddingLeft="10dp"
                    android:textStyle="bold"
                    android:textSize="21sp"></ImageView>
            <TextView
                android:layout_width="130dp"
                android:layout_height="30dp"
                android:id="@+id/tv_plannedPaymentList_title"
                android:text=""
                android:textColor="#FF8000"
                android:paddingLeft="10dp"
                android:textStyle="bold"
                android:textSize="21sp"/>

                </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:id="@+id/tv_plannedPaymentList_note"
                android:text=""
                android:textSize="15sp"
                android:gravity="bottom"
                android:textColor="#808080"
                android:paddingLeft="11dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:id="@+id/tv_plannedPaymentList_amount"
                android:gravity="center_vertical|end"
                android:text=""
                android:textColor="#FF8000"
                android:textStyle="bold"
                android:textSize="17sp"
                android:paddingRight="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:id="@+id/tv_plannedPaymentList_date"
                android:textAlignment="textEnd"
                android:text=""
                android:textColor="#FF8000"
                android:textStyle="bold"
                android:textSize="17sp"
                android:paddingRight="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tv_plannedPaymentList_status"
                android:text=""
                android:textAlignment="textEnd"
                android:paddingRight="10dp"
                android:textSize="17sp"
                android:textColor="#FBC02D"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>